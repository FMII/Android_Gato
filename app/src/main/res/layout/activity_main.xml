<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="20dp"
    android:background="@drawable/fondo"
    >

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome To Tic Tac Toe"
        android:textAlignment="center"
        android:fontFamily="@font/concertoneregular"
        android:layout_marginTop="20dp"
        android:textSize="50dp"
        android:textColor="@color/md_theme_light_onError"
        />

    <ImageView
        android:id="@+id/sopa"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/sopa"
        android:layout_below="@id/textview"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="8dp"
        />

    <ImageView
        android:id="@+id/samurai"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/samurai"
        android:layout_below="@id/textview"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="160dp"
        />
    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:background="@drawable/gatito"
        android:layout_below="@id/textview"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>