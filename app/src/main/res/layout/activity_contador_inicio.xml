<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contador_Inicio"
    android:layout_margin="20dp"
    android:background="@drawable/fondo"
    >
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/concertoneregular"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/md_theme_dark_onError"
        />

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/PlayerOne"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Jugador1"
            android:textSize="25dp"
            android:fontFamily="@font/acmeregular"
            android:textColor="@color/md_theme_light_inverseSurface"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/PlayerTwo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Jugador2"
            android:textSize="25dp"
            android:fontFamily="@font/acmeregular"
            android:textColor="@color/md_theme_light_inverseSurface"
            android:textAlignment="center"
            android:layout_toRightOf="@id/PlayerOne"
            />

        <TextView
            android:id="@+id/ScoreOne"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25dp"
            android:fontFamily="@font/acmeregular"
            android:textColor="@color/md_theme_light_inverseSurface"
            android:textAlignment="center"
            android:layout_below="@id/PlayerOne"
            />
        <TextView
            android:id="@+id/ScoreTwo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25dp"
            android:fontFamily="@font/acmeregular"
            android:textColor="@color/md_theme_light_inverseSurface"
            android:textAlignment="center"
            android:layout_toRightOf="@id/ScoreOne"
            android:layout_below="@id/PlayerTwo"
            />
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/RelativeLayout1"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:backgroundTint="@color/md_theme_light_tertiary"
                android:contentDescription="btn1"
                android:id="@+id/btn1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"
                />
            <Button
                android:backgroundTint="@color/md_theme_light_tertiary"
                android:contentDescription="btn2"
                android:id="@+id/btn2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"
                />
            <Button
                android:backgroundTint="@color/md_theme_light_tertiary"
                android:contentDescription="btn3"
                android:id="@+id/btn3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:backgroundTint="@color/md_theme_light_tertiary"
                android:contentDescription="btn4"
                android:id="@+id/btn4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"
                />
            <Button
                android:backgroundTint="@color/md_theme_light_tertiary"
                android:contentDescription="btn5"
                android:id="@+id/btn5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"
                />
            <Button
                android:backgroundTint="@color/md_theme_light_tertiary"
                android:contentDescription="btn6"
                android:id="@+id/btn6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:backgroundTint="@color/md_theme_light_tertiary"
                android:contentDescription="btn7"
                android:id="@+id/btn7"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"
                />
            <Button
                android:backgroundTint="@color/md_theme_light_tertiary"
                android:contentDescription="btn8"
                android:id="@+id/btn8"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"
                />
            <Button
                android:backgroundTint="@color/md_theme_light_tertiary"
                android:contentDescription="btn9"
                android:id="@+id/btn9"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"
                />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/TextStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="26dp"
        android:text="Status"
        android:textColor="@color/md_theme_light_inverseSurface"
        android:fontFamily="@font/acmeregular"
        />
    <Button
        android:id="@+id/PlayAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextStatus"
        android:layout_centerHorizontal="true"
        android:text="Play Again"
        android:layout_marginTop="30dp"
        android:textColor="@color/md_theme_light_onError"
        android:fontFamily="@font/acmeregular"
        android:backgroundTint="@color/md_theme_dark_onError"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/ResetGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PlayAgain"
        android:layout_centerHorizontal="true"
        android:text="Reset Game"
        android:textColor="@color/md_theme_light_onError"
        android:fontFamily="@font/acmeregular"
        android:backgroundTint="@color/md_theme_dark_onError"
        android:textSize="20dp"
        />

</RelativeLayout>